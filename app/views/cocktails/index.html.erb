<!-- CARDS -->

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1484132286360-7669bdb39f3b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=752&q=80" alt="Card image cap');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <p></p>
          </div>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

