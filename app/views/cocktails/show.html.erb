<!-- BANNER -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1522224050657-33e363782179?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80');">
  <div class="banner-content">
    <h1>My cocktail <%= @cocktail.name %></h1>
  </div>
</div>

<!-- BANNER -->

<!-- DOSES -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <ul>
        <p>Doses:</p>
          <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %>
            <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure ?'} do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-12 col-sm-4">
      <ul>
        <p>Reviews:</p>
          <% @cocktail.reviews.each do |review| %>
            <li><%= review.content %>
              <%= review.rating %>
            </li>
          <% end %>
      </ul>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= simple_form_for [@dose] do |f| %>
        <%= f.association :ingredient, input_html: { class: 'select2' } %>
        <%= f.input :description %>
        <%= f.submit "add a dose", class: "btn-medium" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= simple_form_for [@review] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit "add a review", class: "btn-medium" %>
      <% end %>
    </div>
  </div>
</div>


